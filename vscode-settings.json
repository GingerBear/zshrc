// Place your key bindings in this file to overwrite the defaults
[
    { "key": "shift+cmd+r",                    "command": "workbench.action.debug.start",
                                        "when": "!inDebugMode" },
    { "key": "shift+cmd+r",                    "command": "workbench.action.debug.stop",
                                        "when": "inDebugMode" },
    { "key": "cmd+r",                    "command": "workbench.action.debug.continue",
                                        "when": "inDebugMode" },
    { "key": "alt+r",                    "command": "workbench.action.debug.stepOver",
                                        "when": "inDebugMode" }
]


// Place your settings in this file to overwrite the default settings
{
  "editor.tabSize": 2,
  "files.trimTrailingWhitespace": true,
  "typescript.check.tscVersion": false,
  "window.zoomLevel": 0,
  "emmet.syntaxProfiles": { "javascript": "html" },
  "editor.formatOnSave": true
}
